{
    "include": ["src/**/*"],
    "compilerOptions": {
        "lib": ["es2023"],
        "module": "nodenext",
        "target": "es2022",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "nodenext",
        "sourceMap": true,
        "outDir": "dist",
        "rootDir": "src",
        "declaration": true
    }
}
